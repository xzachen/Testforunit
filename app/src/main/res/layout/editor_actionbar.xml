<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_alignParentBottom="true">
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#ddd"
        android:layout_above="@+id/toolbar_buttons"/>

    <HorizontalScrollView
        android:id="@+id/toolbar_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton android:id="@+id/heading"
                android:src="@drawable/ic_title"
                style="@style/EditorActionBarButton"/>

            <ImageButton android:id="@+id/bold"
                android:src="@drawable/ic_bold"
                style="@style/EditorActionBarButton" />

            <ImageButton android:id="@+id/italic"
                android:src="@drawable/ic_italic"
                style="@style/EditorActionBarButton" />

            <ImageButton android:id="@+id/code"
                android:src="@drawable/ic_code"
                style="@style/EditorActionBarButton" />

            <ImageButton android:id="@+id/quote"
                style="@style/EditorActionBarButton"
                android:src="@drawable/ic_quote" />

            <ImageButton android:id="@+id/list_number"
                android:src="@drawable/ic_list_number"
                style="@style/EditorActionBarButton" />

            <ImageButton android:id="@+id/list_bullet"
                android:src="@drawable/ic_list_bullet"
                style="@style/EditorActionBarButton" />

            <ImageButton android:id="@+id/link"
                android:src="@drawable/ic_link"
                style="@style/EditorActionBarButton" />

            <ImageButton android:id="@+id/image"
                android:src="@drawable/ic_image"
                style="@style/EditorActionBarButton" />

        </LinearLayout>

    </HorizontalScrollView>
</LinearLayout>